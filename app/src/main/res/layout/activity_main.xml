<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/table_diary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:divider="@color/black"
        android:showDividers="middle">

        <TableRow
            android:id="@+id/tr_heading"
            android:layout_width="wrap_content"
            android:minHeight="100px"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_time_column_empty"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:minHeight="100px"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_name_1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:background="#e2e2e3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_profile_1"
                    android:padding="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tv_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="David Newman "
                    android:ellipsize="end"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_name_2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:background="#e2e2e3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_profile_2"
                    android:layout_width="50dp"
                    android:padding="3dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tv_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="John Doe "
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_name_3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:background="#e2e2e3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_profile_3"
                    android:layout_width="50dp"
                    android:padding="3dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tv_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Anitha"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tr_9_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="400px">

            <LinearLayout
                android:id="@+id/ll_9_00"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:minHeight="100px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_9_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="9.00"/>

                <TextView
                    android:id="@+id/tv_9_00_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="|\n|\n|\n|\n|\n|\n|"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_9_00_col_1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_9_00_col_2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_9_00_col_3"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tr_10_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="400px"
            android:layout_marginTop="8dp">


            <LinearLayout
                android:id="@+id/ll_10_00"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:minHeight="100px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_10_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="10.00"/>


                <TextView
                    android:id="@+id/tv_10_00_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="|\n|\n|\n|\n|\n|\n|"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_10_00_col_1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_10_00_col_2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_10_00_col_3"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>


        </TableRow>


        <TableRow
            android:id="@+id/tr_11_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="400px"
            android:layout_marginTop="8dp"
            android:divider="@color/black"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/ll_11_00"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:minHeight="100px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_11_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="11.00"/>


                <TextView
                    android:id="@+id/tv_11_00_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="|\n|\n|\n|\n|\n|\n|"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_11_00_col_1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_11_00_col_2"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_11_00_col_3"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="100px"
                android:orientation="horizontal">

            </LinearLayout>


        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>